<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/rounded"
    android:layout_margin="8dp"
    android:elevation="4dp"
    >

    <!-- Imagen del producto -->
    <ImageView
        android:id="@+id/imageViewProductoCarrito"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:layout_marginEnd="16dp" />

    <!-- Información del producto -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNombreProductoCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Camisa formal Manga Corta" />

        <TextView
            android:id="@+id/textViewPrecioProductoCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="$10" />

    </LinearLayout>

    <!-- Cantidad -->
    <TextView
        android:id="@+id/textViewCantidadProductoCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad: 1"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"/>

    <!-- Botón para eliminar -->
    <Button
        android:id="@+id/buttonEliminarProductoCarrito"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/btnmain"
        android:text="X"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>
